<div class="header">
    <div class="container">
        <div class="logo">
            <a href="<%= root_url %>"><span>Swap</span>per</a>
        </div>
        <div class="header-right">
        	<% if user_signed_in? %>
        		<%= link_to current_user.email, edit_user_registration_path, class: "account" %>
        		<%= link_to "Logout", destroy_user_session_path, class: "account" %>
        	<% else %>
            	<%= link_to 'Login', new_user_session_path, class: "account breaker" %>
                <%= link_to "Sign up", new_user_registration_path,  class: "account" %>
            <% end %>
        </div>
    </div>
</div>